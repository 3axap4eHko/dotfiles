{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "plan",
  "permission": {
    "*": "ask",
    "edit": "ask",
    "bash": {
      "rg": "allow",
      "grep": "allow",
      "bat": "allow",
      "cat": "allow",
      "git status": "allow",
      "git diff": "allow",
      "*": "ask"
    },
    "read": "allow",
    "task": "allow",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "lsp": "allow",
    "todoread": "allow",
    "todowrite": "allow",
    "webfetch": "allow",
    "websearch": "allow",
    "codesearch": "allow",
    "external_directory": "ask",
    "doom_loop": "ask"
  },
  "agent": {
    "build": {
      "edit": "allow",
    }
  },
  "plugin": [
//    "oh-my-opencode",
    "opencode-openai-codex-auth"
  ],
  "provider": {
    "openai": {
      "name": "OpenAI",
      "api": "codex",
      "options": {
        "reasoningEffort": "medium",
        "reasoningSummary": "auto",
        "textVerbosity": "medium",
        "include": [
          "reasoning.encrypted_content"
        ],
        "store": false
      },
      "models": {
        "o3": {
          "name": "o3",
          "thinking": true
        },
        "o4-mini": {
          "name": "o4-mini",
          "thinking": true
        },
        "codex-1": {
          "name": "Codex-1"
        },
        "gpt-5.2": {
          "name": "GPT 5.2 (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "none": {
              "reasoningEffort": "none",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
