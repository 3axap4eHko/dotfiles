alias ll='ls -alhF'
alias la='ls -Ah'
alias l='ls -CFh'
alias mkbackup='zip -r backup-$(date +%s).zip ~/projects ~/.bin ~/.npmrc ~/.yarnrc ~/.ssh ~/.hyper.js ~/.bashrc ~/.prettierrc ~/.gitconfig ~/.wakatime* ~/current.kdbx ~/.aws -x "**/node_modules/*" -x "**/.next/*" -x "**/.venv/*" -x "**/.yarn/*" -x "**/build/*" -x "**/dist/*"'
alias mkrsa='ssh-keygen -t rsa -b 4096 -N "" -C admin@zource.dev -f ~/.ssh/$1_rsa'
alias mkclean='find ~/projects -type d \( -name "node_modules" -o -name ".next" \) -prune -exec echo "{}" +'
alias mkplaylist='find -type f -iname "*.mp4" -or -iname "*.mp3" -or -iname "*.flac" -or -iname "*.m4a" | sort > playlist.m3u'
alias pbcopy='xclip -i -selection clipboard'
alias xtype=$'sh -c \'sleep 5; xdotool type "$(xclip -o -selection clipboard)"\''
